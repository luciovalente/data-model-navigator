#!/usr/bin/env python3
"""Local launcher for Data Model Navigator.

Usage:
  ./dmn --menu

If package is not installed, it bootstraps from local ./src.
"""

from __future__ import annotations

import pathlib
import sys

ROOT = pathlib.Path(__file__).resolve().parent
SRC = ROOT / "src"
if SRC.exists():
    sys.path.insert(0, str(SRC))

from datamodel_navigator.cli import main


if __name__ == "__main__":
    main()
